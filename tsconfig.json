{
  "extends": "@gravity-ui/tsconfig/tsconfig",
  "compilerOptions": {
    "outDir": "build/esm",
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": ["build", "dist"]
}
